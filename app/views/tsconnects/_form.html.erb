
<%= simple_form_for(@tsconnect) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.association :billing, label_method: :amount %>
    <%= f.association :shop, label_method: :amount %>
    <%= f.association :tenant, label_method: :first_name %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
